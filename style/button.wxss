.button {
  display: inline-block;
  margin: 4px;
  background: #e0e1e2;
  padding: 0 auto 4px;
  color: rgba(0, 0, 0, 0.6);
  font-weight: bold;
  border-radius: 1px;
  font-size: 32rpx;
  transition: 0.3s all;
  height: 40px;
  width: 10px;
}

.button::after {
  content: none;
}

.button.primary {
  background: #000000;
  color: rgba(255, 255, 255, 0.9);
}

.button-hover {
opacity: 0.75;
}